generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// user_roles
model RoleDefinition {
  id          Int    @id @default(autoincrement())
  name        String @unique
  label       String
  description String

  @@map("user_roles")
}
